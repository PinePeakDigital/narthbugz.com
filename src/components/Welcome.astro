---
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<nav>
			<div class="logo">Narthbugz</div>
			<div class="nav-links">
				<a href="/features">Features</a>
				<a href="/how-it-works">How It Works</a>
				<a href="#pricing">Pricing</a>
				<a href="https://docs.narthbugz.com">Docs</a>
				<a href="#login" class="button secondary">Login</a>
				<a href="#signup" class="button primary">Sign Up</a>
			</div>
		</nav>

		<section id="hero">
			<h1>Time Tracking That Actually Predicts The Future</h1>
