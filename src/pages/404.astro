---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="container">
		<h1>404</h1>
		<p class="subtitle">Page Not Found</p>
		<p class="message">The page you're looking for doesn't exist or has been moved.</p>
		<div class="actions">
			<a href="/" class="button primary">Go Home</a>
			<a href="/contact" class="button secondary">Contact Support</a>
		</div>
	</div>
</Layout>

<style>
	.container {
		max-width: 600px;
		margin: 0 auto;
		padding: 6rem 2rem;
		text-align: center;
	}

	h1 {
		font-size: 6rem;
		font-weight: 800;
		margin: 0;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		line-height: 1;
		letter-spacing: -0.02em;
	}

	.subtitle {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin: 1rem 0;
	}

	.message {
		font-size: 1.25rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}

	.button {
		padding: 0.875rem 1.75rem;
		border-radius: 0.5rem;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.2s;
		font-size: 1.0625rem;
		letter-spacing: -0.01em;
	}

	.button.primary {
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		color: white;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	.button.primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	}

	.button.secondary {
		border: 1px solid #3245ff;
		color: #3245ff;
	}

	.button.secondary:hover {
		background: rgba(50, 69, 255, 0.1);
	}

	@media (max-width: 768px) {
		.actions {
			flex-direction: column;
		}

		.button {
			width: 100%;
			text-align: center;
		}
	}
</style>
